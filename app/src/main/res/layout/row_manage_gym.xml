<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    app:cardCornerRadius="12dp">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RadioButton
    android:id="@+id/selectGymRadio"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_centerInParent="true"
    android:layout_alignParentLeft="true"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/selectGymRadio"
        android:layout_margin="12dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/gym_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28dp"
            android:text="Gym Name"/>
        <TextView
            android:id="@+id/address_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Lig-107, Niharika"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/gym_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Korba, Chhattisgarh"
            android:textSize="18sp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/more_options"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_baseline_more_vert_24"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"/>
</RelativeLayout>
</androidx.cardview.widget.CardView>