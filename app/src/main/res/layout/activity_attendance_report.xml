<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MarkAttendenceActivity">
    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/member_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:text="Member Log"/>
        <Button
            android:id="@+id/trainer_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Staff Log"
            android:layout_marginLeft="4dp"
            android:backgroundTint="@color/colorWhite"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="8dp"
            android:layout_marginRight="12dp"/>

    </LinearLayout>
    <Button
        android:id="@+id/live_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Live"
        android:layout_below="@id/top_layout"
        android:layout_marginLeft="12dp"
        />
    <Button
        android:id="@+id/expired_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expired"
        android:backgroundTint="@color/colorWhite"
        android:textColor="@color/colorBlack"
        android:layout_below="@id/top_layout"
        android:layout_toRightOf="@id/live_btn"
        android:layout_marginLeft="12dp"
        />

    <TextView
        android:id="@+id/name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/expired_btn"
        android:text="Name"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="12dp"/>
    <TextView
        android:id="@+id/select_member"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/name_view"
        android:layout_marginTop="4dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:text="Select Member Log"
        android:gravity="center|left"
        android:background="#E6E2E2"
        android:paddingStart="4dp"
        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"/>
</RelativeLayout>